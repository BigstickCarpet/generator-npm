{
  "name": "<%= project.name %>",
  "version": "0.0.1",
  "description": "<%- project.description %>",
<% if (options.env.yeoman) { -%>
  "keywords": [
    "yeoman-generator"
  ],
<% } else if (options.env.cordova) { -%>
  "keywords": [
    "cordova"
  ],
<% } else { -%>
  "keywords": [],
<% } -%>
  "author": {
    "name": "<%= project.author.name %>",
    "url": "https://github.com/<%= options.githubUsername %>"
  },
  "license": "MIT",
  "homepage": "https://github.com/<%= options.githubUsername %>/<%= project.name %>",
<% if (options.env.yeoman) { -%>
  "main": "generators/app/index.js",
<% } else if (options.env.cordova) { -%>
  "main": "www/index.html",
<% } else { -%>
  "main": "lib/index.js",
<% } -%>
  "scripts": {
<% if (options.env.browser && !options.env.cordova) { -%>
    "build": "npm run lint && npm run browserify && npm run browserify-min",
    "lint": "jshint . --verbose && jscs . --verbose",
    "browserify": "browserify lib/index.js --standalone <%= project.camelCaseName %> --debug | exorcist dist/<%= project.name %>.js.map --base dist > dist/<%= project.name %>.js",
    "browserify-min": "browserify -g uglifyify lib/index.js --standalone <%= project.camelCaseName %> -o dist/<%= project.name %>.min.js",
    "browserify-cover": "browserify -g browserify-istanbul lib/index.js --standalone <%= project.camelCaseName %> -o dist/<%= project.name %>.cover.js",
<% } else { -%>
    "build": "jshint . --verbose && jscs . --verbose",
<% } -%>
<% if (options.tests) { -%>
<% if (options.env.node && options.env.browser) { -%>
    "test": "istanbul cover _mocha -- --recursive tests && npm run karma",
    "mocha": "mocha --recursive tests",
    "karma": "npm run browserify-cover && karma start --single-run",
<% } else if (options.env.node) { -%>
    "test": "istanbul cover _mocha -- --recursive tests",
    "mocha": "mocha --recursive tests",
<% } else if (options.env.browser) { -%>
    "test": "npm run browserify-cover && karma start --single-run",
<% } -%>
<% } -%>
    "upgrade": "npm-check-updates -u && npm update",
    "release": "npm run upgrade && npm run build && npm test && bump --prompt --tag --push --all && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/<%= options.githubUsername %>/<%= project.name %>.git"
  },
  "devDependencies": {
<% if (options.env.browser) { -%>
<% if (!options.env.cordova) { -%>
    "browserify": "^10.1.3",
    "exorcist": "^0.4.0",
    "uglifyify": "^3.0.1",
<% } -%>
<% if (options.tests) { -%>
    "browserify-istanbul": "^0.2.1",
    "karma": "^0.12.31",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^0.1.8",
    "karma-cli": "0.0.4",
    "karma-coverage": "^0.2.6",
    "karma-firefox-launcher": "^0.1.4",
    "karma-ie-launcher": "^0.1.5",
    "karma-mocha": "^0.1.10",
    "karma-mocha-reporter": "^1.0.2",
    "karma-phantomjs-launcher": "^0.1.4",
    "karma-safari-launcher": "^0.1.1",
    "karma-sinon": "^1.0.4",
<% } -%>
<% } -%>
<% if (options.env.node && options.tests) { -%>
    "istanbul": "^0.3.13",
<% } -%>
<% if (options.tests) { -%>
    "coveralls": "^2.11.2",
    "mocha": "^2.2.4",
    "chai": "^2.3.0",
    "sinon": "^1.14.1",
<% } -%>
    "jscs": "^1.13.1",
    "jshint": "^2.7.0",
    "npm-check-updates": "^1.5.1",
    "version-bump-prompt": "^1.1.0"
  },
  "dependencies": {}
}
