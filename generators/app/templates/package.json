{
  "name": "<%= project.name %>",
  "version": "0.0.1",
  "description": "<%- project.description %>",
<% if (options.env.yeoman) { -%>
  "keywords": [
    "yeoman-generator"
  ],
<% } else if (options.env.cordova) { -%>
  "keywords": [
    "cordova"
  ],
<% } else { -%>
  "keywords": [],
<% } -%>
  "author": {
    "name": "<%= project.author.name %>",
    "url": "https://github.com/<%= options.githubUsername %>"
  },
  "license": "MIT",
  "homepage": "https://github.com/<%= options.githubUsername.toLowerCase() %>/<%= project.name %>",
<% if (options.env.yeoman) { -%>
  "main": "generators/app/index.js",
<% } else if (options.env.cordova) { -%>
  "main": "www/index.html",
<% } else { -%>
  "main": "lib/index.js",
<% } -%>
  "scripts": {
    "lint": "jshint . --verbose && jscs . --verbose",
<% if (options.env.browser && !options.env.cordova) { -%>
    "build": "npm run lint && npm run browserify",
    "browserify": "simplifyify lib/index.js --outfile dist/<%= project.name %>.js --standalone <%= project.camelCaseName %> --debug --minify<%= options.env.node ? '' : ' --test' %>",
    "watch": "npm run browserify -- --watch",
<% } else { -%>
    "build": "npm run lint",
<% } -%>
<% if (options.tests) { -%>
<%    if (options.env.node && options.env.browser) { -%>
    "test": "istanbul cover _mocha -- --bail --recursive tests && npm run karma",
    "mocha": "mocha --bail --recursive tests",
    "karma": "karma start --single-run",
<%    } else if (options.env.node) { -%>
    "test": "istanbul cover _mocha -- --bail --recursive tests",
    "mocha": "mocha --bail --recursive tests",
<%    } else if (options.env.browser) { -%>
    "test": "npm run karma",
    "karma": "karma start --single-run"
<%    } -%>
<% } -%>
<% if (options.env.browser && options.tests) { -%>
    "upgrade": "ncu --upgradeAll && npm update && bower update",
<% } else { -%>
    "upgrade": "ncu --upgradeAll && npm update",
<% } -%>
    "bump": "bump --prompt --tag --push --all",
    "release": "npm run upgrade && npm run build<%- options.tests ? ' && npm test' : '' %> && npm run bump && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/<%= options.githubUsername.toLowerCase() %>/<%= project.name %>.git"
  },
  "devDependencies": {
<% if (options.env.browser) { -%>
    "simplifyify": "^1.0.0",
<%    if (options.tests) { -%>
    "bower": "^1.4.1",
    "karma": "^0.12.31",
    "karma-chrome-launcher": "^0.1.8",
    "karma-cli": "0.0.4",
<%      if (!options.env.node) { -%>
    "karma-coverage": "^0.2.6",
<%      } -%>
    "karma-firefox-launcher": "^0.1.4",
    "karma-ie-launcher": "^0.1.5",
    "karma-mocha": "^0.1.10",
    "karma-mocha-reporter": "^1.0.2",
    "karma-phantomjs-launcher": "^0.1.4",
    "karma-safari-launcher": "^0.1.1",
<%    } -%>
<% } -%>
<% if (options.env.node && options.tests) { -%>
    "istanbul": "^0.3.13",
<% } -%>
<% if (options.tests) { -%>
    "coveralls": "^2.11.2",
    "mocha": "^2.2.5",
    "chai": "^3.2.0",
    "sinon": "^1.15.4",
<% } -%>
    "jscs": "^1.13.1",
    "jshint": "^2.7.0",
    "npm-check-updates": "^1.5.1",
    "version-bump-prompt": "^1.1.0"
  },
  "dependencies": {}
}
